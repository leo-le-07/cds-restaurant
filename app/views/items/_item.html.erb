<div class="row item-container">
  <div class="list-group">
  <% unless items.empty? %>
    <% items.each_with_index do |item, index| %>
      <div class="list-group-item">
        <h4 class="list-group-item-heading"><%= item.name %></h4>
        <div class="row item-desc list-group-item-text">
          <div class="col-md-8">
            <p><%= item.desc %></p>
            <p><button type="button" class="btn btn-danger"><%= number_to_currency(item.price, precision: 0, unit: "VND", delimiter: ",", format: "%n %u") %></button></p>
          </div>
          <div class="col-md-4">
            <img src="<%= item.image_url %>" alt="<%= item.name %>">
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
  </div>
</div>
