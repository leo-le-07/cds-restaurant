<div class="row item-container">
  <div class="list-group">
  <% unless items.empty? %>
    <% items.each_with_index do |item, index| %>
      <div class="list-group-item">
        <h4 class="list-group-item-heading"><%= item.name %></h4>
        <div class="row item-desc list-group-item-text">
          <div class="col-md-8">
            <p><%= item.desc %></p>
            <p class="view-comment-group">
              <span class="view"><%= item.view_count %></span>
              <span class="comment"><%= item.comments.count %></span>
              <span class="averate-rate"><%= item.average_rate %></span>
            </p>
            <p><%= link_to format_currency(item.price), order_details_add_path(item_id: item.id), class: "btn btn-danger" %></p>
          </div>
          <div class="col-md-4">
            <img src="<%= item.image_url %>" alt="<%= item.name %>">
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
  </div>
</div>
